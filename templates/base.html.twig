<!DOCTYPE html>
<html>
    <head>
        <meta charset="UTF-8">
        <title>{% block title %}Welcome!{% endblock %}</title>
        <link rel="icon" href="data:image/svg+xml,<svg xmlns=%22http://www.w3.org/2000/svg%22 viewBox=%220 0 128 128%22><text y=%221.2em%22 font-size=%2296%22>⚫️</text></svg>">
        <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.1/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-4bw+/aepP/YC94hEpVNVgiZdgIC5+VKNBQNGCHeKRQN+PtmoHDEXuppvnDJzQIu9" crossorigin="anonymous">
        <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.1/dist/js/bootstrap.bundle.min.js" integrity="sha384-HwwvtgBNo3bZJJLYd8oVXjrBZt8cqVSpeBNS5n7C8IVInixGAoxmnlMuBnhbgrkm" crossorigin="anonymous"></script>
        {% block stylesheets %}
            {{ encore_entry_link_tags('app') }}
        {% endblock %}

        {% block javascripts %}
            {{ encore_entry_script_tags('app') }}
        {% endblock %}
    </head>
    <nav class="by-2 bg-dark border-bottom">
        <div class="container d-flex flex-wrap">

            <div class="dropdown">
                <a class="nav nav-link dropdown-toggle text-white" role="button" data-bs-toggle="dropdown" aria-expanded="false">
                    Mon blog
                </a>
                <ul class="dropdown-menu" aria-labelledby="dropdownMenuButtonAdminDashboard">
                    <li><a class="dropdown-item" href="{{ path('admin') }}">Tableau de bord</a></li>
                    <li><a class="dropdown-item" href="#">Menu</a></li>
                    <li><a class="dropdown-item" href="#">Something else here</a></li>
                </ul>
            </div>

            <div class="dropdown">
                <a class="nav nav-link dropdown-toggle text-white" role="button" data-bs-toggle="dropdown" aria-expanded="false">
                    Ajouter
                </a>
                <ul class="dropdown-menu" aria-labelledby="dropdownMenuButtonAdminAdd">
                    <li><a class="dropdown-item" href="#">Article</a></li>
                    <li><a class="dropdown-item" href="#">Page</a></li>
                </ul>
            </div>

            <div class="container">
                <header class="d-flex flex-wrap justify-content-center border-bottom py-3 mb-4">
                    <a href="{{ path('app_home') }}" classe="d-flex align-items-center mb-3 mb-md-0 me-md-auto text-dark text-decoration-none">
                        <span class="fs-4 header-title">Mon blog</span>
                    </a>

                    <ul class="nav nav-pills align-items-center">
                        <li class="nav-item">
                            <a class="nav-link active" href="#">S'inscrire</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link active" href="#">Se connecter</a>
                        </li>
                        
                    </ul>

                </header>
            </div>

        </div>
    </nav>
    {% block body %}{% endblock %}
    
    <div class="container">
        <footer class="d-flex flex-wrap justify-content-between align-items-center py-3 my-4 border-top">
            <div class="col-md-4 d-flex align-items-center">
                <span class="copyright">© {{ 'now'|date('Y') }} NajNaj Copyright</span>
            </div>
        </footer>
    </div>
</html>
